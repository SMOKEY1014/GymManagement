@model IEnumerable<GymManagement.Models.LeaveApplication>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="Create" class="btn btn-primary" style="margin:15px;"><i class="fa fa-plus"></i> Add New Leave Application</a>
</p>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Leave Applications List</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoOfDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attachment)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Actions</th>
            @* <th>Edit</th>
            <th>View</th>
            <th>Delete</th> *@
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Fullname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attachment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Description)
            </td>
            @* <td>
                <a asp-action="LeaveApproval" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-pencil"></i>  Actions</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-pencil"></i>  Edit</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-eye"></i>  Details</a>
            </td>
            <td>

                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i>  Delete</a>
            </td> *@
            <td>
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Actions
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="align-items:center; justify-items: center; margin-right: 40px;">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" style="margin: 10px; width:150px;"><i class="fa fa-pencil"></i>  Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning" style="margin: 10px; width:150px;"><i class="fa fa-eye"></i>  Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" style="margin: 10px; width:150px;"><i class="fa fa-trash"></i>  Delete</a>
                                    <a asp-action="LeaveApproval" asp-route-id="@item.Id" class="btn btn-primary" style="margin: 10px; width:150px;"><i class="fa fa-pencil"></i>  Approve Leave</a>
                                    <a asp-action="LeaveRejection" asp-route-id="@item.Id" class="btn btn-danger" style="margin: 10px; width:150px;"><i class="fa fa-pencil"></i>  Reject Leave</a>
                    </div>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>